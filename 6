library(e1071) 
library(caret) 
library(dplyr) 
data(iris)
head(iris)
summary(iris)
set.seed(123) 
indexes = createDataPartition(iris$Species, p = .8, list = F)
train = iris[indexes, ]
test = iris[-indexes, ]
nb_class = naiveBayes(Species~., data = train)
print(nb_class)
pred = predict(nb_class, test, type="class")
cm = confusionMatrix(test$Species, pred)
print(cm)
